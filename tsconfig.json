{
   "compilerOptions": {
     "module": "NodeNext",
     "target": "ES2022",
     "moduleResolution": "NodeNext",
     "esModuleInterop": true,
     "skipLibCheck": true,
     "allowImportingTsExtensions": true,
     "noEmit": true,
     "typeRoots": ["./@types","./node_modules/@types"],
     "resolveJsonModule": true
   },
   "include": [
     "server.ts",
     "api/**/*.ts",          // Include all files under the `api` directory
    "@types/**/*.d.ts"      // Include global type definitions
   ],
   "exclude": ["node_modules"]
 }
